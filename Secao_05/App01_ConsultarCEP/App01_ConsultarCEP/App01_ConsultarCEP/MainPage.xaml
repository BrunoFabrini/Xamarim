    <StackLayout BackgroundColor="#FAD606" Padding="30" Spacing="30">
        <Image Source="Logo.png"></Image>
        <Entry x:Name="CepEntry" Placeholder="Digite o CEP" PlaceholderColor="#FAD606" BackgroundColor="#FFFFFF"></Entry>
        <Button x:Name="BuscarButton" Text="Buscar Endereço" TextColor="#FFFFFF" BackgroundColor="#00416B"></Button>
        <Label x:Name="ResultadoLabel" Text="" />
